@model ProductsPageViewModel

@if (Model.Page.TotalPages > 1)
{
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center align-bottom">

            <li class="page-item @(Model.Page.HasPreviousPage ? "" : "disabled")">
                <a class="page-link"
                   aria-label="Previous"
                   asp-controller="@ViewData["controllerName"]"
                   asp-action="@ViewData["actioName"]"
                   asp-route-pagenumber="@(Model.Page.PageNumber - 1)">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>

            @for (int i = Model.PaginationStartPageNumber; i <= Model.PaginationEndPageNumber; i++)
            {
                var active = i == Model.Page.PageNumber ? "active" : "";
                <li class="page-item @active">
                    <a class="page-link"
                       asp-controller="@ViewData["controllerName"]"
                       asp-action="@ViewData["actioName"]"
                       asp-route-pagenumber="@i">
                        @i
                    </a>
                </li>
            }

            <li class="page-item @(Model.Page.HasNextPage ? "" : "disabled")">
                <a class="page-link"
                   aria-label="Next"
                   asp-controller="@ViewData["controllerName"]"
                   asp-action="@ViewData["actioName"]"
                   asp-route-pagenumber="@(Model.Page.PageNumber + 1)">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>

        </ul>
    </nav>
}
