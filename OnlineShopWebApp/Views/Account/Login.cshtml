<!--Log In-->
@model LoginViewModel 
@{
    ViewData["Title"] = "Вход";
}
<div class="row gy-5">
    <div class="col-4 offset-4 text-center">
        <h3 class="text-center">Вход</h3>
        <form method="post">
            <input type="hidden" name="returnUrl" value="@Model.ReturnUrl">
            <div class="mb-3">
                <input asp-for="Email" class="form-control" placeholder="Логин">
            </div>

            <div class="mb-3">
                <input asp-for="Password" type="password" class="form-control" placeholder="Пароль">
            </div>

            <div class="mb-3">
                <div class="form-check">
                    <input id="rememberMe" class="form-check-input" type="checkbox" name="rememberMe" value="true">
                    <label class="form-check-label" for="rememberme">
                        Запомнить меня
                    </label>
                </div>
            </div>

            <div class="mb-3">
                <div class="text-center">
                    <button class="btn btn-dark btn-block"
                            role="button"
                            type="submit"
                            asp-controller="Account"
                            asp-action="Login">
                        Войти
                    </button>
                    <a class="text-dark"
                       asp-controller="Account"
                       asp-action="Register"
                       asp-route-returnUrl ="@Model.ReturnUrl">
                        <small>Регистрация нового пользователя</small>
                    </a>
                </div>
            </div>

            <div class="text-danger font-weight-bold" asp-validation-summary="All"></div>

        </form>
    </div>
</div>